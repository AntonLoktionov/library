{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Unit Tests",
      "program": "${workspaceFolder}/node_modules/ts-mocha/bin/ts-mocha",
      "args": [
        "-p",
        "tsconfig.test.json",
        "--paths",
        "--timeout",
        "999999",
        "--colors",
        "--recursive",
        "./src/test/**/*.spec.ts"
